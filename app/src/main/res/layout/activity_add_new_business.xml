<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ariana.shahre_ma.MyBusiness.Add_business">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText

                android:id="@+id/add_market_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نام فروشگاه"
                android:singleLine="true"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تلفن"
                android:singleLine="true"
                android:inputType="number" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="موبایل"
                android:singleLine="true"
                android:inputType="number"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:inputType="textPersonName"
            >
            <EditText
                android:id="@+id/add_market_fax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="فاکس"
                android:singleLine="true"
                android:inputType="number" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ایمیل"
                android:singleLine="true"
                android:inputType="textPersonName"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="مدیر فروشگاه"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:inputType="textPersonName"
            >
            <EditText
                android:id="@+id/add_market_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="آدرس"
                android:singleLine="true"
                android:inputType="textPersonName"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="توضیحات"

                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="زیر گروه"
                android:id="@+id/ac_subset"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        <com.nhaarman.supertooltips.ToolTipRelativeLayout
            android:id="@+id/tooltipRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="زمینه فعالیت"
                android:id="@+id/ac_field"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="منطقه"
                android:id="@+id/ac_area"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        <Button
            android:id="@+id/select_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" انتخاب موقعیت "
            android:onClick="select_map"
            android:layout_marginTop="20dp"
            android:background="@color/primary"
            />

        <com.dd.CircularProgressButton
            android:id="@+id/btn_save_edit"
            android:layout_width="196dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="انجام شد"
            app:cpb_textError="ثبت نشد،دوباره امتحان کنید"
            app:cpb_textIdle="ثبت "
            android:onClick="add_business" />
    </LinearLayout>



</ScrollView>
