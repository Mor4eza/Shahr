<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/jobs_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:layout_gravity="right">



    <android.support.v7.widget.SearchView
        android:id="@+id/search_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:iconifiedByDefault="false" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ExpandableListView
        android:id="@+id/laptop_list"
        android:divider="#A4C739"
        android:dividerHeight="0.9dp"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:drawSelectorOnTop="false"
        >

    </ExpandableListView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ارسال علاقه مندی ها"
            android:id="@+id/button2"
            android:onClick="SendPostInterest"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دریافت علاقه مندی ها"
            android:id="@+id/button3"
            android:onClick="GetPostInterest"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>