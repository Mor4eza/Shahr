<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="right"
    android:orientation="vertical"
    tools:context="com.ariana.shahre_ma.MyProfile.Sign_Up">


    <EditText

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:hint="نام"
        android:id="@+id/txtName"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/user_name"
         />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="ایمیل"
        android:id="@+id/txtEmail"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/email"
        />


    <AutoCompleteTextView
        android:drawableLeft="@drawable/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/autoCompletecCity"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:hint="شهر" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="موبایل"
        android:id="@+id/txtPhone"
        android:layout_marginTop="15dp"
        android:ellipsize="start"
        android:drawableLeft="@drawable/phone"
        android:inputType="phone" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="سن"
        android:inputType="number"
        android:id="@+id/txtAge"
        android:layout_marginTop="15dp"
        android:height="50dp"
        android:drawableLeft="@drawable/age"
        />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_jen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="جنسیت:"/>

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_jen"
                    android:layout_marginRight="10dp"
                    android:id="@+id/Spiner_Sex"
                    android:layout_marginTop="15dp"
                    />

        </RelativeLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="نام کاربری"
        android:id="@+id/txtUsername"
        android:layout_marginTop="15dp"
        android:height="40dp"
        android:drawableLeft="@drawable/user"
        android:inputType="textPersonName" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="رمز عبور"
        android:layout_marginTop="15dp"
        android:height="40dp"
        android:id="@+id/txtpass"
        android:drawableLeft="@android:drawable/ic_partial_secure"
        android:inputType="textPersonName" />



    <com.dd.CircularProgressButton
        android:id="@+id/pButton"
        android:layout_width="196dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:onClick="AddTOmember"
        app:cpb_cornerRadius="48dp"
        app:cpb_textComplete="ثبت شد"
        app:cpb_textError="خطا"
        app:cpb_textIdle="ثبت نام" />


</LinearLayout>
</ScrollView>