<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true"

        >

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_notify_date"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:gravity="left"
                android:textSize="17sp"
                android:text="date"
                />

            <TextView

                android:id="@+id/tv_notify_market"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:textSize="20sp"
                android:text="Test"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/tv_notify_date"
                android:layout_toRightOf="@+id/tv_notify_date" />

            <TextView

                android:gravity="right"
                android:id="@+id/tv_notify_detail"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="hello"

                android:layout_below="@+id/tv_notify_date"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_notify_market"
                android:layout_alignStart="@+id/tv_notify_market" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جدید"
                android:id="@+id/tv_newtag"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffff000a" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>