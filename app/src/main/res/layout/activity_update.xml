<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ariana.shahre_ma.Settings.UpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آخرین آپدیت:"
        android:drawableRight="@drawable/discount_start"
        android:drawablePadding="20dp"
        android:id="@+id/tv_last_update"
        android:paddingTop="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بروزرسانی"
        android:id="@+id/btn_update_all"
        android:layout_above="@+id/progressBar_update"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_update"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp"
        android:layout_alignRight="@+id/tv_last_update"
        android:layout_alignEnd="@+id/tv_last_update" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="در این قسمت می توانید به صورت کلی برنامه را بروزرسانی کنید قسمت های که بروزرسانی می شود عبارت است  شهر ٍ گروه ها ٍ زیر گروه ها ٍ زمینه کاری ٍ بوک مارک ٍ علاقه مندی  "
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_last_update"
        android:layout_alignEnd="@+id/tv_last_update" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_lastUpdate"
        android:layout_alignBottom="@+id/tv_last_update"
        android:layout_toLeftOf="@+id/tv_last_update"
        android:layout_toStartOf="@+id/tv_last_update" />
</RelativeLayout>
