<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dpv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue">

    <com.panwrona.downloadprogressbar.library.DownloadProgressBar
        android:id="@+id/dpv3"
        android:layout_width="200dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        dpv:circleBackgroundColor="#ffbcbcbc"
        dpv:progressBackgroundColor="#ffacacac"
        dpv:progressColor="#ffffffff"
        dpv:drawingColor="#ffffffff"
        dpv:progressDuration="7000"
        dpv:resultDuration="3000"
        dpv:circleRadius="60dp"
        dpv:lineWidth="4dp"
        dpv:strokeWidth="3dp"
        dpv:overshootValue="3"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="در حال دانلود..."
        android:id="@+id/textView3"
        android:textColor="#fff4eff9"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>