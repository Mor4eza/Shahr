<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLabel"
        android:visibility="invisible"/>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_search_where"
        android:hint="در کجا...؟ (کرج،شیراز و...)"
        android:gravity="start|end"
        android:layout_below="@+id/tvLabel"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_search_what"
        android:hint="دنبال چی هستم ( مثلا رستوران)"
        android:layout_below="@+id/et_search_where"
        android:imeActionLabel="جستجو"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
       />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="جستجو..."
        android:id="@+id/btn_search"
        android:onClick="Search"
        android:layout_below="@+id/et_search_what"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp" />


</RelativeLayout>
