<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/view">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="300dp">


            <ImageView
                android:id="@+id/my_business_image1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pooshak"
                android:clickable="true"
                android:background="?android:selectableItemBackground"

                android:layout_above="@+id/fab_toolbar" />

            <TextView

                android:id="@+id/my_business_title"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="top"
                android:gravity="center_vertical|center_horizontal"
                android:background="#5c6f1c0b"
                android:alpha=".9"
                android:textColor="#fff"
                android:textSize="26sp"
                android:text="Test"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RatingBar
                android:id="@+id/my_business_rate"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:background="@color/blue_focused"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fab_toolbar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.github.alexkolpa.fabtoolbar.FabToolbar
                android:id="@+id/fab_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                tb:tb_anim_duration="500"
                tb:tb_button_gravity="start"
                tb:tb_container_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/btn_edit_business"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_action_edit"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        />
                    <ImageView
                        android:id="@+id/btn_discount"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/discount_tag"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        />

                <!-- More buttons can be added here -->

            </com.github.alexkolpa.fabtoolbar.FabToolbar>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>