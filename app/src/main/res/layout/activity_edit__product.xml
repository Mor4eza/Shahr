<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ariana.shahre_ma.Bazarche.Edit_Product">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText

                android:id="@+id/edit_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نام کالا"
                android:singleLine="true"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tavafoq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مقطوع"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/maqtoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="توافقی" />

            </RadioGroup>


            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="قیمت"
                    android:id="@+id/edit_product_price"
                    android:inputType="numberDecimal" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/edit_product_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تلفن"
                android:singleLine="true"
                android:inputType="number" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/edit_product_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="موبایل"
                android:singleLine="true"
                android:inputType="phone"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/edit_product_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ایمیل"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:inputType="textPersonName"
            >
            <EditText
                android:id="@+id/edit_product_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="آدرس"
                android:singleLine="true"
                android:inputType="textPersonName"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/edit_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="توضیحات"

                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/edit_product_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="خصوصیات کالا"

                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="زیر گروه"
                android:id="@+id/edit_ac_product_subset"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionNext"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>




        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="شهر"
                android:id="@+id/edit_ac_product_city"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionNext"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="منطقه"
                android:id="@+id/edit_ac_product_area"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionNext"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="تصاویر:"/>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/horizontalScrollView">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/edit_image1"
                    android:src="@drawable/fab_plus_icon"
                    android:background="#72224422"
                    android:layout_alignParentTop="true"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fab_plus_icon"
                    android:background="#72224422"
                    android:id="@+id/edit_image2"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/edit_image1"
                    android:layout_toEndOf="@+id/edit_image1"
                    android:layout_marginLeft="1dp" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fab_plus_icon"
                    android:background="#72224422"
                    android:id="@+id/edit_image3"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/edit_image2"
                    android:layout_toEndOf="@+id/edit_image2"
                    android:layout_marginLeft="1dp" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fab_plus_icon"
                    android:background="#72224422"
                    android:id="@+id/edit_image4"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/edit_image3"
                    android:layout_toEndOf="@+id/edit_image3"
                    android:layout_marginLeft="1dp" />

            </RelativeLayout>
        </HorizontalScrollView>


        <Button
            android:id="@+id/select_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" انتخاب موقعیت "
            android:onClick="select_map"
            android:layout_marginTop="20dp"
            android:background="@color/primary"
            />

        <com.dd.CircularProgressButton
            android:id="@+id/btn_product_save"
            android:layout_width="196dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="انجام شد"
            app:cpb_textError="ثبت نشد،دوباره امتحان کنید"
            app:cpb_textIdle="ثبت "
            android:onClick="product_edit" />
    </LinearLayout>



</ScrollView>
