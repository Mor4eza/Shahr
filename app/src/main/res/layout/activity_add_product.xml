<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layoutDirection="rtl"
    tools:context="com.ariana.shahre_ma.Bazarche.add_product">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText

                android:id="@+id/add_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نام کالا"
                android:singleLine="true"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tavafoq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مقطوع"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/maqtoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="توافقی" />

            </RadioGroup>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="قیمت"
                android:id="@+id/add_product_price"
                android:inputType="numberDecimal" />

        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_jen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="گروه:"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_jen"
                android:layout_marginRight="10dp"
                android:id="@+id/sp_collection"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="زیر گروه:"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_sub"
                android:layout_marginRight="10dp"
                android:id="@+id/sp_Subset"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="توضیحات"

                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_product_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="خصوصیات کالا"

                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <LinearLayout
            android:id="@+id/linear_Tamas"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="اطلاعات تماس"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00695c"
                android:layout_toLeftOf="@id/hint2"
                android:layout_marginTop="7dp"
                android:layout_marginRight="3dp"
                />

        </RelativeLayout>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_product_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تلفن تماس"
                android:singleLine="true"
                android:inputType="number" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_product_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="موبایل"
                android:singleLine="true"
                android:inputType="phone"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_product_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ایمیل"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:inputType="textPersonName"
            >
            <EditText
                android:id="@+id/add_product_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="آدرس"
                android:singleLine="true"
                android:inputType="textPersonName"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>



        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="زیر گروه"
                android:id="@+id/ac_product_subset"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionNext"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>




        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="شهر"
                android:id="@+id/ac_product_city"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionNext"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="منطقه"
                android:id="@+id/ac_product_area"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionNext"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <Button
            android:id="@+id/select_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" انتخاب موقعیت "
            android:onClick="select_map"
            android:layout_marginTop="20dp"
            android:background="@color/primary"
            />

        <com.dd.CircularProgressButton
            android:id="@+id/btn_product_save"
            android:layout_width="196dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:cpb_cornerRadius="48dp"
            app:cpb_textComplete="انجام شد"
            app:cpb_textError="ثبت نشد،دوباره امتحان کنید"
            app:cpb_textIdle="ثبت "
            android:onClick="product_save" />
    </LinearLayout>



</ScrollView>
