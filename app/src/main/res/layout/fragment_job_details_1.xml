
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/details_parent"
    tools:context="com.z3_soft.shahre_ma.job_details.job_details_1$PlaceholderFragment">



    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider_jobs"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/slider_jobs"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:id="@+id/parent_jobs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/market_name"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/ratingBar1"
                android:layout_gravity="center"
                android:numStars="5"
                android:progressTint="#ffff3d15"
                android:progressBackgroundTintMode="multiply"
                android:progressBackgroundTint="#ff31bdff"
                android:progressTintMode="multiply"
                android:secondaryProgressTint="#ffff3013"
                android:secondaryProgressTintMode="multiply"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:text=""
                android:id="@+id/market_rateCount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:id="@+id/market_tel"
                android:drawableRight="@drawable/phone"
                android:drawablePadding="10dp"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >

         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/market_web"
                android:text=""
                android:gravity="center_vertical"
                android:drawableRight="@drawable/email"
                android:drawablePadding="10dp"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_vertical"
        android:drawableRight="@drawable/user"
        android:drawablePadding="10dp"
        android:id="@+id/market_owner"
        android:layout_gravity="end"
        android:layout_marginBottom="20dp"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/market_subset"
            android:drawableRight="@drawable/subset"
            android:drawablePadding="10dp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/market_zamine"
            android:drawableRight="@drawable/field_activity"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:id="@+id/market_address"
            android:drawableRight="@drawable/address"
            android:drawablePadding="10dp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableRight="@drawable/decription"
            android:drawablePadding="10dp"
            android:id="@+id/market_desc"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/distance"
                android:text="در حال پیدا کردن مکان فعلی شما..."
                android:drawablePadding="10dp"
                android:id="@+id/market_distance"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>


        </LinearLayout>


</RelativeLayout>
    </ScrollView>