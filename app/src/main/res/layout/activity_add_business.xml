<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ariana.shahre_ma.MyBusiness.Add_business">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText

                android:id="@+id/add_market_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نام فروشگاه"
                android:singleLine="true"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تلفن"
                android:singleLine="true"
                android:inputType="number" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="موبایل"
                android:singleLine="true"
                android:inputType="number"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:inputType="textPersonName"
            >
            <EditText
                android:id="@+id/add_market_fax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="فاکس"
                android:singleLine="true"
                android:inputType="number" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ایمیل"
                android:singleLine="true"
                android:inputType="textPersonName"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="مدیر فروشگاه"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:inputType="textPersonName"
            >
            <EditText
                android:id="@+id/add_market_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="آدرس"
                android:singleLine="true"
                android:inputType="textPersonName"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/add_market_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="توضیحات"

                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="زیر گروه"
                android:id="@+id/ac_subset"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="زمینه فعالیت"
                android:id="@+id/ac_field"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="منطقه"
                android:id="@+id/ac_area"
                android:inputType="textPersonName" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            >

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:id="@+id/spinner_gh"
                android:layout_weight="0.50"
                android:layout_marginLeft="40px"
                android:paddingTop="20px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مدت قرارداد"
                android:id="@+id/text2825"
                android:paddingLeft="80px"
                android:paddingTop="20dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/save_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثبت و ویراش"
            android:onClick="save_edit"
            android:background="@color/material_blue"
            />
    </LinearLayout>
</ScrollView>
