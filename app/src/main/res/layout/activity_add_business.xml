<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ariana.shahre_ma.MyBusiness.Add_business">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نام فروشگاه" />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تلفن"
        />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="موبایل"
        />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_fax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="فاکس"
        />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ایمیل"
        />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="مدیر فروشگاه"
        />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="آدرس"
        />
    <com.iangclifton.android.floatlabel.FloatLabel
        android:id="@+id/market_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="توضیحات"
        />


</LinearLayout>
</ScrollView>
