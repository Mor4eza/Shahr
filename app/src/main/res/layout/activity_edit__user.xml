
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="right"
        android:orientation="vertical"
        tools:context="com.ariana.shahre_ma.MyProfile.Edit_User">


        <EditText

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:hint="نام"
            android:id="@+id/edit_name"
            android:height="40dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/user_name"
            android:inputType="textPersonName" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="ایمیل"
            android:id="@+id/edit_email"
            android:layout_marginTop="15dp"
            android:height="40dp"
            android:drawableLeft="@drawable/email"
            android:inputType="textEmailAddress" />


        <AutoCompleteTextView
            android:drawableLeft="@drawable/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:id="@+id/edit_city"
            android:imeOptions="actionNext"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:hint="شهر" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="موبایل"
            android:id="@+id/edit_phone"
            android:layout_marginTop="15dp"
            android:height="40dp"
            android:drawableLeft="@drawable/phone"
            android:inputType="number|phone" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="سن"
            android:inputType="number"
            android:id="@+id/edit_age"

            android:layout_marginTop="15dp"
            android:height="50dp"
            android:drawableLeft="@drawable/age"
            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="نام کاربری"
            android:id="@+id/edit_username"
            android:layout_marginTop="15dp"
            android:height="50dp"
            android:drawableLeft="@drawable/user"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="رمز عبور"
            android:layout_marginTop="15dp"
            android:height="40dp"
            android:id="@+id/edit_pass"
            android:drawableLeft="@android:drawable/ic_partial_secure"
            android:inputType="textPersonName" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_sex"
            android:layout_marginTop="15dp"
            android:height="20dp"

            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ثبت"
            android:id="@+id/btn_edit"
            android:background="@color/fab_material_light_blue_500"
            android:layout_marginTop="15dp"
            android:height="40dp"

            android:onClick="edit_member" />

    </LinearLayout>
</ScrollView>